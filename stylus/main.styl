@import url("https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap");
@import nib

@page
  size A3
  margin 12mm 24mm

@media screen
  #wrapper
    margin 0 auto
    padding 2em
    max-width 1200px

html
  font-size 16px

body
  color hsl(0, 0, 60%)
  // font-family Ricty, 'Roboto Mono', 'Roboto Condensed', sans-serif
  font-family 'Roboto Mono', Ricty, Helvetica, sans-serif
  // html方式
  &.html
    td
      // -webkit-text-stroke color
      -webkit-text-stroke-width 2px
      -webkit-text-fill-color transparent
  // svg方式
  &.svg
    td
      position relative
      height 17vh
    svg
      size 100%
      absolute left top
      text  // Safariではsvgからの継承だと反映されない。
        dominant-baseline text-before-edge
        fill white
        stroke currentColor
        stroke-width 4
        stroke-linejoin round
        paint-order stroke

h1
  font-size 6rem
  font-weight bold
  line-height 1
table
  table-layout fixed
  width 100%
  margin-top 36px
  th
    font-size 2rem
    text-align center
    color hsl(0, 0%, 75%)
    border-bottom 2px solid hsl(0, 0%, 75%)
  td
    font-size 4rem
    border-bottom 2px solid hsl(0, 0%, 75%)
    + td
      border-left 2px dashed hsl(0, 0%, 75%)
.sat
  color rgb(0, 160, 233)
.sun
  color rgb(230, 0, 18)
